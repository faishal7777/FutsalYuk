<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.futsalyuk.runup.pilih_tempat">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@drawable/square_balik"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout."
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="43sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="221dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:src="@drawable/lapangan" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RaDH Sport"
                        android:textSize="22sp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/open_sans"/>
                    <Button
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="53dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_mainkan"
                        android:text="Mainkan"
                        android:textAllCaps="false"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Metode Pembayaran"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/open_sans"
                android:gravity="center"/>
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="10dp"
              android:background="@color/colorGrey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/square_grey">
                <LinearLayout
                    android:layout_width="179.5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <Button
                        android:id="@+id/btnDate"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_event_black_24dp"
                        android:text="Booking Hari"
                        android:textAllCaps="false"
                        android:textSize="8sp" />
                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello world"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="179.5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="1dp"
                    android:background="@color/colorWhite">
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_add_alarm_black_24dp"
                        android:text="Jam Bermain"
                        android:textAllCaps="false"
                        android:textSize="8sp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello world"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/square_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/square_grey">
                <LinearLayout
                    android:layout_width="179.5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_update_black_24dp"
                        android:text="Waktu Bermain"
                        android:textAllCaps="false"
                        android:textSize="8sp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello world"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="179.5dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="1dp"
                    android:background="@color/colorWhite">
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_share_black_24dp"
                        android:text="Patungan"
                        android:textAllCaps="false"
                        android:textSize="8sp" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello world"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/square_grey">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
